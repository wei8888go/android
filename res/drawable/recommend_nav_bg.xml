        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <solid android:color="@color/default_btn_bg" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
