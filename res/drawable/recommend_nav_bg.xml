            <item>
                <shape>
                    <solid android:color="@color/default_btn_bg" />
                </shape>
            </item>
            <item android:bottom="0dp">
                <shape>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
